include mixins/tab.pug
include mixins/container.pug
include mixins/heading.pug

doctype html
html
  head
    include includes/head.pug
    title Gate controller
  body
    div.container.text-center.mt
        form(method="get" action="open" id="form")
            h3.u-full-width Hello, #{token.owner}
            pre.u-full-width #{token.id}
            div.row
              table.ma.small-table
                tr
                  td
                    b Uses
                  td #{token.remainingUses}
                tr
                  td
                    b Start Date
                  td #{moment(token.dateStart).format('YYYY-MM-DD HH:mm')}
                tr
                  td
                    b End Date
                  if token.dateEnd === false
                    td never
                  else
                    td #{moment(token.dateEnd).format('YYYY-MM-DD HH:mm')}
                tr
                  td
                    b Device
                  td #{token.device}
            div.row.mt
              input(type="hidden" name="token" value=token.id)
              button.button-primary(type="submit") Open
    include includes/foot.pug